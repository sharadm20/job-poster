{
  "name": "ai-job-applier",
  "version": "1.0.0",
  "description": "AI-powered job application system",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=user-service\" \"npm run dev --workspace=auth-service\" \"npm run dev --workspace=job-discovery-service\" \"npm run dev --workspace=api-gateway\"",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .ts,.tsx",
    "docker:build": "docker-compose -f docker/compose/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/compose/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/compose/docker-compose.yml down"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.45.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/joi": "^17.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "joi": "^18.0.1"
  }
}
